{
  "name"             : "ollieread/phpcss",
  "description"      : "PHP powered cascading style sheets",
  "type"             : "library",
  "keywords"         : [
    "css",
    "php",
    "css preprocessor",
    "preprocessor"
  ],
  "license"          : "MIT",
  "authors"          : [
    {
      "name" : "Ollie Read",
      "email": "code@ollieread.com"
    }
  ],
  "require"          : {
    "php"             : "^8.4",
    "ext-ctype"       : "*",
    "phpcss/syntax-l3": "*@dev",
    "ext-mbstring"    : "*",
    "ext-iconv"       : "*"
  },
  "require-dev"      : {
    "phpunit/phpunit"   : "^12.0",
    "phpstan/phpstan"   : "^2.1",
    "doctrine/inflector": "^2.0"
  },
  "autoload"         : {
    "psr-4": {
      "PhpCSS\\": "src/"
    },
    "files": [
    ]
  },
  "minimum-stability": "stable",
  "scripts"          : {
    "test": [
      "@php vendor/bin/phpunit --testsuite=Unit,Feature"
    ],
    "lint": [
      "@php vendor/bin/phpstan analyse --memory-limit=2G --verbose --ansi"
    ]
  },
  "extra"            : {},
  "config"           : {
    "allow-plugins": {}
  },
  "autoload-dev"     : {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "repositories"     : {
    "syntax-l3": {
      "type": "path",
      "url" : "./modules/syntax-l3"
    }
  }
}
